<%= render 'shared/header' %>
<%= stylesheet_link_tag "http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" %>

<div class="main-container">
  <div class="main wrapper clearfix">
    <a class="button" href="people/new">Yeni Ki≈üi Ekle</a>
    <br />
    <br />
    <% for person in @persons do %>
      <div class="member">
        <div class="thumbnail">
          <img src="<%= person.gravatar_url %>?s=250">
          <div class="caption">
            <h3><%= person.name %></h3>
            <a href="http://twitter.com/<%= person.twitter %>">
              <i class="fa fa-twitter-square"></i>
            </a>
            <a href="http://github.com/<%= person.github %>">
              <i class="fa fa-github"></i>
            </a>
            <a href="<%= url_with_protocol person.web%>">
              <i class="fa fa-bookmark"></i>
            </a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div> <!-- #main-container -->

<%= render 'shared/footer' %>
